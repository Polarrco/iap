{
  "version": "0.0.1",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "lint:tsc": "yarn workspace @jeremybarbet/nest-iap lint:tsc && yarn workspace @jeremybarbet/node-iap lint:tsc",
    "lint:eslint": "eslint --fix '**/*.ts'",
    "lint:format": "git ls-files -m | xargs yarn prettier --write --ignore-unknown --no-error-on-unmatched-pattern",
    "lint:format:all": "prettier --write 'packages/**/*.{ts,json,md}'",
    "lint": "yarn lint:format && yarn lint:eslint",
    "build": "yarn workspace @jeremybarbet/node-iap build && yarn workspace @jeremybarbet/nest-iap build"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "5.22.0",
    "@typescript-eslint/parser": "5.22.0",
    "eslint": "8.14.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-prefer-arrow": "1.2.3",
    "eslint-plugin-simple-import-sort": "7.0.0",
    "prettier": "2.6.2",
    "typescript": "4.6.4"
  }
}
