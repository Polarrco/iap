{
  "hooks": {
    "before:init": [
      "yarn lint",
      "yarn build"
    ],
    "after:bump": "yarn changelog -p --template .github/changelog.hbs"
  },
  "git": {
    "push": true,
    "commitMessage": "chore: release ${version}",
    "changelog": "yarn changelog --stdout --unreleased --template .github/changelog.hbs"
  },
  "github": {
    "release": true,
    "releaseNotes": "yarn changelog --stdout --unreleased --template .github/release.hbs"
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "angular"
    },
    "release-it-yarn-workspaces": {
      "workspaces": [
        "packages/node-iap",
        "packages/nest-iap"
      ],
      "publish": false
    }
  }
}
